    $().ready(function () {
        $("#newreg").validate({
            rules: {
               
                paw1: {
                    required: true
                },
                paw2: {
                    equalTo: "#paw1"
                },                                          
            },
            messages: {               
               
                paw1: {
                    required: "<br>请输入密码"
                },
                paw2: {
                    equalTo: "<br>两次输入的密码不一致"
                },                                          
            }
        });
    });
</script>
	
